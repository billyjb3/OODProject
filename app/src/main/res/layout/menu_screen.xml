<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/menuLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.group.oodproject.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!!ROID BLASTER!!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView" />


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/spaceship14"
        android:background="@android:color/transparent"
        android:id="@+id/cruiserIB"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:id="@+id/battleIB"
        android:scaleType="fitCenter"
        android:src="@drawable/battleship"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text="!!CONTINUE BLASTIN!!"
        android:visibility="invisible"
        android:id="@+id/continueButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:text="!!NEW BLASTIN!!"
        android:id="@+id/newButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Your Ship"
        android:textSize="25dp"
        android:layout_above="@+id/newButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/pickText"/>

</RelativeLayout>
